#include <iostream>
#include <cstdlib>
#include <unistd.h>
#include <math.h>

using namespace std;



int main ()
{
  int row=30,column=100,h=1,k=1;
  char c;
  bool a=false,b=false;
  
  cout << a << b;
  for (;;((a==0 && b==0)?(h++, k++):((a==1 && b==0)? (h--,k++): ((a==1 && b==1)?(h--, k--): (h++, k--)))))
	{
	  for (int i=0; i<row; i++)
	    {
	      for (int j=0; j<column; j++)
		{
		  if (i==0 || i==row-1 || j==0 || j==column-1)
		    cout << "x";
		  else if (h==i && k==j)
		    cout << "O"; 
		  else
		    cout << " ";
		}
	      cout << endl;
	    }
	  if (h == row-2)
	    a = true;
	  if (k == column -2)
	    b = true;
	  if (h == 1)
	    a = false;
	  if (k == 1)
	    b = false;
	  usleep (10000);
	  
	 
	}
    
}
